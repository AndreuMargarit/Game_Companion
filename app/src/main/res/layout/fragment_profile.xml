<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="32dp"
    tools:context=".Fragments.ProfileFragment">

    <TextView
        android:id = "@+id/registerTextQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Don't have an account yet?"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="8dp"></TextView>

    <Button
    android:id = "@+id/registerButton"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/button_item_height"
    android:layout_gravity="center"
        android:layout_marginBottom="16dp"
    android:text = "@string/profile_register_button"/>

    <TextView
        android:id ="@+id/loginTextQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Already have an account?"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="8dp"></TextView>

    <Button
        android:id = "@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_item_height"
        android:layout_gravity="center"
        android:text = "@string/profile_login_button"/>

    <ImageView
        android:id = "@+id/avatarImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src ="@drawable/icon_profile"
        android:layout_gravity="center_horizontal"></ImageView>

    <TextView
        android:id = "@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="8dp"
        android:text = "username"></TextView>

    <Button
        android:id="@+id/logOutButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_item_height"
        android:text="logOut" />

</LinearLayout>