<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.ProfileFragment">

    <Button
    android:id = "@+id/registerButton"
    android:layout_width="match_parent"
    android:layout_height="@dimen/button_item_height"
    android:text = "@string/profile_register_button"/>

    <Button
        android:id = "@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_item_height"
        android:text = "@string/profile_login_button"/>
    <Button
        android:id="@+id/logOutButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_item_height"
        android:text="logOut" />

    <TextView
        android:id = "@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <ImageView
        android:id = "@+id/avatarImageView"
        android:layout_width="@dimen/button_item_height"
        android:layout_height="@dimen/button_item_height"
        android:src ="@drawable/icon_profile"
        android:layout_gravity="center_horizontal"></ImageView>

</LinearLayout>