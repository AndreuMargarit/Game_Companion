<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/stream_height"
    android:layout_marginBottom="@dimen/margin_small">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/streamsImageView"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/aphelios"
            android:layout_marginRight="@dimen/margin_small"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/streamTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:text="Title"
                android:textColor="@color/colorRegularText"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logoUser"
                    android:layout_width="@dimen/user_logo_small"
                    android:layout_height="@dimen/user_logo_small"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_marginRight="@dimen/margin_small"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/streamerUsernameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textColor="@color/colorRegularText"
                        android:textSize="@dimen/text_size_username_streams"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/viewerCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8888"
                        android:textColor="@color/colorRed"
                        android:textSize="@dimen/text_size_username_streams"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>